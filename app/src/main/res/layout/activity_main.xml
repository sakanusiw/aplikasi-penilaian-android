<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="156dp"
        android:layout_height="117dp"
        android:layout_gravity="center"
        android:paddingBottom="5pt"
        app:srcCompat="@drawable/logo_uty_png" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#2E4179"
        android:text="Penilaian\nUniversitas Teknologi Yogyakarta"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="11pt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp">

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="9pt"
        android:hint="Nama Mahasiswa"
        android:text="" />

    <EditText
        android:id="@+id/etTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textSize="9pt"
        android:hint="Nilai Tugas"
        android:text="" />

    <EditText
        android:id="@+id/etKehadiran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textSize="9pt"
        android:hint="Nilai Kehadiran"
        android:text="" />

    <EditText
        android:id="@+id/etUTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textSize="9pt"
        android:hint="Nilai UTS"
        android:text="" />

    <EditText
        android:id="@+id/etUAS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textSize="9pt"
        android:hint="Nilai UAS"
        android:text="" />

    <Button
        android:id="@+id/btHitung"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:background="#3F51B5"
        android:text="HITUNG"
        android:onClick="hitung"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nilai Akhir (Angka)"
        android:textSize="9pt"
        android:layout_marginTop="5pt"/>

    <EditText
        android:id="@+id/etAkhir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="9pt"
        android:text="" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nilai Akhir (Huruf)"
        android:textSize="9pt"
        android:layout_marginTop="5pt"/>

    <EditText
        android:id="@+id/etHuruf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="9pt"
        android:text="" />
    </LinearLayout>
</LinearLayout>